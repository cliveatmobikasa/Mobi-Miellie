                    </svg>
                  </div>
                </button>
              </div>
            </div>
            <div class="form--input">
              <p class="form--input-info" data-pswd-error-alert>{{- 'customer.register.password_error_msg' | t -}}</p>
            </div>

            {% if section.settings.text %}
              {{ section.settings.text }}
            {% endif %}

            <div class="acceptsMarketing">
              <input type="checkbox" id="customer[accepts_marketing]" name="customer[accepts_marketing]" required aria-required="true" />
              <label for="customer[accepts_marketing]">
                I accept 
                <a href="/pages/terms-conditions" class="accepts-links">Terms & Conditions</a>
                 and 
                 <a href="/pages/privacy-policy" class="accepts-links">Privacy Policy</a>
              </label>
            </div>

            {% render 'oxi-social-login', or_text: 'or signup with' %}

            <div class="action_bottom">
              <input class="global-button global-button--primary" type="submit" value="{{ 'customer.register.sign_up' | t }}" />
              <p class="account-extra-info">
                {{ 'customer.register.new_customer_label' | t }}
                <a href="{{ routes.account_login_url }}" id="new_customer_login_link" aria-label="Login">  
                  {{ 'customer.register.sign_in_html' | t }}
                </a>
              </p>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>



{% schema %}
{
  "name": "Register",
  "class": "shopify-section--registration-form",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ]
}

{% endschema %}