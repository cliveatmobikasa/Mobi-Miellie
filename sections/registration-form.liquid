<script
  type="application/json"
  data-section-type="registration-form"
  data-section-id="{{ section.id }}"
>
</script>

<span class="visually-hidden" id="account-sr-only" role="region" aria-live="polite" data-aria-live=""></span>

<section class="section">
  <div class="container content">
    <div class="one-whole column collection_nav">
      <h1>{{ 'customer.register.title' | t }}</h1>
      <div class="feature-divider"></div>
    </div>

    <div class="three-eighths columns medium-down--one-whole offset-by-five is-hidden-offset-mobile-only">
      <br />

      <div id="customer">
        <div id="create-customer">
          {% form 'create_customer' %}

            {% if form.errors %}
              <div class="alert-wrapper">
                {% if form.errors %}
                  {%- for field in form.errors -%}
                    {% capture register_password_error %}
                      {{- form.errors.messages[field] -}}
                    {% endcapture %}
                  {%- endfor -%}
                {% endif %}
              </div>
              <div data-announce-get>
                <p>{{ register_password_error }}</p>
              </div>
              <div class="visually-hidden" data-announce-set role="alert" aria-atomic="true"></div>
            {% endif %}

            <div id="first_name" class="form--input input-placeholder">
              <label for="first_name_inp" class="login">{{ 'customer.register.first_name' | t }}</label>
              <input required placeholder="Enter your First Name" class="form--input" type="text" value="" name="customer[first_name]" id="first_name_inp" size="30" aria-required="true" />
            </div>

            <div id="customer_last_name" class="form--input input-placeholder">
              <label for="last_name" class="login">{{ 'customer.register.last_name' | t }}</label>
              <input required placeholder="Enter your Last Name" class="form--input" type="text" value="" name="customer[last_name]" id="last_name" size="30" aria-required="true"  />
            </div>

            <div id="email" class="form--input input-placeholder">
              <label for="email_inp" class="login">{{ 'customer.register.email' | t }}</label>
              <input required placeholder="Enter your Email ID" class="form--input" type="email" value="" name="customer[email]" id="email_inp" size="30" aria-required="true"  />
            </div>

            <div class="form--input input-placeholder">
              <label for="phone_inp" class="login">{{ 'customer.register.phone' | t }}</label>
              <input placeholder="Enter your Phone Number" class="form--input" type="tel" value="" name="customer[note][phone]" id="phone_inp" size="10"  aria-required="true" />
            </div>

            <div id="password" class="form--input form--input-pswd input-placeholder">
              <label for="password_inp" class="login">{{ 'customer.register.password' | t }}</label>
              <div class="relative">
                <input required placeholder="Enter your Password" type="password" value="" name="customer[password]" id="password_inp" class="password" size="30" aria-required="true"  />
                <button type="button" class="view-pswd" data-view-pswd aria-label="show password">
                  {% comment %}
                  <span class="visually-hidden">View Password</span>
                  {% render 'icon' with 'eye' %}
                  {% endcomment %}
                  <div class="view-password">
                    <span class="visually-hidden">View Password</span>  
