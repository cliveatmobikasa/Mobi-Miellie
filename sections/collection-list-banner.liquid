<section class="collection_list_container">
<div class="collection_container_img">
{% if section.settings.collection_desktop_banner != blank %}
<img alt="{{- section.settings.collection_desktop_banner.alt | escape -}}" src="{{ section.settings.collection_desktop_banner | img_url:'master' }}" class="desktop_banner">
{% endif %}
{% if section.settings.collection_mobile_banner != blank %}
<img alt="{{- section.settings.collection_mobile_banner.alt | escape -}}" src="{{ section.settings.collection_mobile_banner | img_url:'master' }}" class="mobile_banner">
{% endif %}
</div>
<div class="text_container">
{% if section.settings.collection_title != blank %}
<h2>{{ section.settings.collection_title }}</h2>
{% endif %}
{% if section.settings.collection_subHeading != blank %}
<p>{{ section.settings.collection_subHeading }}</p>
{% endif %}
{% if section.settings.Button_text != blank %}
<div class="collection_list_button">
<a href="{{ section.settings.Buttion_link }}" aria-label="{{ section.settings.button_aria_text }}" class="global-button--primary-desktop">
{{ section.settings.Button_text }}
</a>
<div>
{% endif %}
</div>
</section>
<style>
.collection_container_img{
    width:100%;
}
.collection_container_img img{
    width:100%;
}
section.collection_list_container {
    position: relative;
    margin-bottom: 84px;
}
.text_container{
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.collection_list_container h2 {
    font-size: 26px;
    margin: 0;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 10px;
}
.collection_list_container p{
    font-size: 60px;
    color: #383838;
    margin: 0;
    margin-bottom: 30px;
    line-height: 72px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 10px;
}
.collection_list_button{
    max-width: 160px;
    margin: auto;
    background: #DD136E;
    border-radius: 80px;
    line-height: 40px;
}
.collection_list_button a {
    color: #ffffff;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
}
.collection_list_button a:hover{
  background:BF165E;
}
.mobile_banner{
    display:none;
}
@media (min-width:768px) and (max-width:1200px){
    .collection_list_container p {
    font-size: 35px;
    line-height: 40px;
}
}
@media (max-width:768px){
    .desktop_banner{
        display:none;
    }
    .mobile_banner{
        display:block;
    }
    .text_container{
        width:100%;
    }
    .collection_list_container p {
    font-size: 22px;
    line-height: 26px;
    letter-spacing: 2px;
    margin-bottom: 13px;
}  
.collection_list_container h2{
  font-size:14px !important;
  line-height:16px !important;
  margin-bottom: 8px;
  letter-spacing: 6px;
}
.collection_list_button {
  max-width: 100px;
    line-height: 20px;
    margin-bottom: 20px;
}
.collection_list_button a {
    font-size: 12px;
}
section.collection_list_container {
    margin-bottom: 55px;
}
}
</style>
{% schema %}
{
  "name": "Collection List Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "collection_desktop_banner",
      "label": "Desktop Banner"
    },
    {
      "type": "image_picker",
      "id": "collection_mobile_banner",
      "label": "Mobile Banner"
    },
    {
      "type": "text",
      "id": "collection_title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "collection_subHeading",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "Button_text",
      "label": "Button Text"
    },
    {
      "type": "text",
      "id": "button_aria_text",
      "label": "Aria Label Text"
    },
    {
      "type": "url",
      "id": "Buttion_link",
      "label": "Button Link"
    }
  ],
  "presets": [{
    "name": "collection list banner"
  }]
}
{% endschema %}
