<section id="custom-blogs" class="section {{ section.settings.css_class }}">
    <div class="container">
        <div class="one-whole column center">
        {% if section.settings.title != blank %}    
            <h2 class="title"><span role="text">{{section.settings.title}}</span></h2>
            <div class="feature-divider"></div>
        {% endif %}
            <div class="blogs-wrapper">
                {% for block in section.blocks %}
                    <div class="custom-blog-item">      
                        {% if block.settings.link != blank %}
                            <a class="blog-item-wrapper" href="{{block.settings.link}}">
                        {% else %}      
                            <div class="blog-item-wrapper">
                        {% endif %}                
                        {% if block.settings.image != blank %}  
                          <img src="{{block.settings.image | img_url: '300x300'}}" alt="" loading="lazy">
                        {% endif %}  
                        {% if block.settings.title != blank %}
                            <p class="blog-title">{{block.settings.title}}</p>
                        {% endif %} 
                        {% if block.settings.link != blank %}
                            </a>
                        {% else %}      
                          </div>
                        {% endif %}                       
                    </div>
                {% endfor %}    
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Custom Blogs",
    "class": "shopify-section--custom-blogs",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
        {
          "type": "custom-blogs",
          "name": "Custom Blogs",
          "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Upload Image"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link"
              }
          ]
        }
      ],
    "presets": [
      {
        "name": "Custom Blogs"
      }
    ]
  }
  
  {% endschema %}