<style>
.reset_customer_password .form--input-info.active[data-pswd-error-alert] {
    color: #D60000;
}
.error {
  color: #D60000;
}
</style>

<section class="section">
  <div class="container content">
    <div
      class="
        one-whole
        column
        collection_nav
      "
    >
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
      <div class="feature-divider"></div>
    </div>

    <div
      class="
        three-eighths
        columns
        medium-down--one-whole
        offset-by-five
        is-hidden-offset-mobile-only
        reset_customer_password
      "
    >
      <br />

      {% form 'reset_customer_password' %}
        <p class="center">
          <em>{{ 'customer.reset_password.subtext' | t: email: email }}</em>
        </p>

        {{ form.errors | default_errors }}

        <div id="password" class="form--input">
          <label for="password">
            {{ 'customer.reset_password.password' | t }}
          </label>
          <input
            class="password"
            id="customer_password"
            name="customer[password]"
            type="password"
            size="16"
          >
        </div>
        <div class="form--input">
              <p class="form--input-info" data-pswd-error-alert>{{- 'customer.register.password_error_msg' | t -}}</p>
            </div>

        <div id="password_confirm">
          <label for="password_confirmation">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="customer_password_confirmation"
            class="password"
            size="16"
          >
        </div>

        <p>
          <input
            class="
              global-button
              global-button--primary
            "
            type="submit"
            value="{{ 'customer.reset_password.submit' | t }}"
          >
        </p>
      {% endform %}
    </div>
  </div>
</section>

{% comment %}
{% section 'newsletter' %}
{% endcomment %}
