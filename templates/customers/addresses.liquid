            <h2 id="add_address_title_a">{{ 'customer.addresses.add_new' | t }}</h2>

            <a
              href="#"
              onclick="Shopify.CustomerAddress.toggleNewForm(); return false;"
              class="add-address-close-btn add_address_btn" aria-label="Close modal" role="button">x</a>
