<div class="mobile-search is-hidden-large" data-autocomplete-{{ settings.enable_autocomplete }}>
  <form class="search-form search-popup__form" action="{{ routes.search_url }}">
    <div class="search__fields">
      <input type="hidden" name="type" value="{{ settings.search_option }}" />
      <label for="q" class="visually-hidden">{{ 'general.search.title' | t: shop_name: shop.name }}</label>
        <input class="input" id="q" type="text" name="q" placeholder="{{ 'general.search.title' | t: shop_name: shop.name }}" value="{{ search.terms }}" x-webkit-speech autocapitalize="off" autocomplete="off" autocorrect="off" aria-expanded="false" />
        {% comment %} <span class="icon-search submit-search"></span> {% endcomment %}
        <button type="button" class="icon-search submit-search" aria-label="Submit search">
          <span class="visually-hidden">Submit search</span>
        </button>
        <button type="button" class="icon-cross close-search" aria-label="Close search">
          <span class="visually-hidden">Close search</span>
        </button>
      <input type="submit" name="search" class="visually-hidden" tabindex="-1" value="search" />
    </div>
  </form>
</div>
