<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    <script>window._theme = window._theme || {};</script>
  
  {% render 'shogun-head' %}
  <style>
    .checkout-message {
      color: #d21a68;
      line-height: 1.3;
      margin: 0 17px 20px;
    }
    /* tmp - hide discount input on checkout */
    /* .edit_checkout .field__input-btn-wrapper {
      display: none;
    }*/
    input.field--error-plus-dynamic {
      border-color: #d21a68 !important;
      -webkit-box-shadow: 0 0 0 1px #d21a68;
      box-shadow: 0 0 0 1px #d21a68;
    }
    p.field__message.field__message--error-plus-dynamic {
      color: #d21a68 !important;
    }
  </style>
  <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-TSMC9Z6');</script>
    <!-- End Google Tag Manager -->
</head>
  <body>

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TSMC9Z6"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
<!-- <div class="checkout-additional-copy">We are currently experiencing high order volume, please expect 7-14 days minimum for shipping.</div> -->
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
    {{ "manager.js" | asset_url | script_tag }}
    {{ "hubbox.js" | asset_url | script_tag }}
    {{ "hubbox.css" | asset_url | stylesheet_tag }}
    <script src="{{- 'checkout-script.js' | asset_url -}}" defer></script>
    
    {% comment %} :: GWP :: {% endcomment %}
    {% render 'gwp-script' %}

    <script>
      const box = document.getElementsByClassName("content-box");
      const message = document.createElement('div');
      message.className = 'checkout-message';
      // message.innerHTML = 'We are currently experiencing high order volume, please expect 7-14 days minimum for shipping.'
      box[0] && box[0].appendChild(message)
    </script>

    <style>
      /* tmp - hide discount input on checkout */
      /* .edit_checkout .field__input-btn-wrapper {
        display: none;
      }*/
    </style>
    
  </body>
</html>
